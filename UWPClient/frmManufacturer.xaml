<Page
    x:Class="UWPClient.frmManufacturer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <Button Content="Close" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20" Click="Button_Click"/>
        <ListView x:Name="lstPianos" VerticalAlignment="Top" Height="288" IsItemClickEnabled="True" DoubleTapped="ListView_DoubleTapped" HorizontalAlignment="Center" Margin="0,50,0,0"/>
        <TextBlock x:Name="txtDescription" HorizontalAlignment="Center" Margin="0,293,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" Width="440"/>
    </Grid>

</Page>
